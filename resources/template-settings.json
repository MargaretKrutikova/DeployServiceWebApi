{
  "projects" : { 
    /* example of a project for running deployment scripts */
    "example-project-deployment": {
      /* 
       when deploying a service from this project, the project's root scripts
       will run before the service's own scripts.
      */
      "scripts": [{
        "path": "..\\tools\\checkout_svn.bat",
        "arguments": "\"https://svn.url.com/deploy-scripts/trunk\" \"D:\\projects\\deploy-scripts\\example-project\""
      }],
      /*
        root path is optional, can be used if services' scripts are located in the 
        same subdirectory. The value will be concatenated with services' scripts paths.
      */
      "serviceScriptsRootPath": "D:\\projects\\deploy-scripts\\example-project",

      "services": {
        "wip" : {
          "displayText": "wip example services",
          /* A service can have multiple scripts which can be specified with arguments */
          "scripts": [{"path": "wip1.bat"}, {"path": "wip2.bat"}]
        },
        "stage": {
          "displayText": "stage example service",
          "scripts": [{"path": "stage.bat"}]
        },
        "production" : {
          "displayText": "production example service",
          "scripts": [{"path": "stage.bat"}]
        }
      }
    },
    /* example of a project for running general-purpose scripts */
    "run-cleanup" : {
      "services": {
        "image-cache-cleanup" : {
          "displayText": "image cache cleanup",
          "scripts": [ {"path": "D:\\projects\\cleanup-scripts\\image-cache-cleanup.bat"} ]
        }
      }
    }
  }
}